function tv = unified_TV(MR)
% Create one sparse matrix to perform all the required TV operations

% Pre-allocate TV matrix
Id=MR.UMCParameters.Operators.Id;
tv=sparse(prod(Id([1:3 5:end])),prod(MR.UMCParameters.Operators.Id([1:3 5:end])));

% Loop over all dimensions and compute sparse matrices
for n=1:numel(MR.UMCParameters.Operators.TVdimension)
    if MR.UMCParameters.Operators.TVdimension>0
        tv=tv+TV(n,
        
% END
end